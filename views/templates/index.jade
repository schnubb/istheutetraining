extends ../layout

block head
    title= title

    script(src="javascripts/iht.js", type="text/javascript")

    script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js", type="text/javascript")

    script(type='text/javascript', src='/javascripts/localize/angular-locale_de-de.js')

    script(src="javascripts/app.js", type="text/javascript")

    script(src="javascripts/controller/istTraining.js", type="text/javascript")

    //script(src="javascripts/time.js" type="text/javascript")

block content
    .app(ng-app="iht")
        .iht(ng-controller="istTraining" ng-cloak)
            .jumbotron
                .container-fluid.text-center(ng-model="answer")
                    h1
                        small= title
                    p(class="{{content.class}}") {{content.answer}}
            .container
                .row
                    .col-xs-12.col-md-6.col-md-offset-3.text-center.form-group(ng-model="times")
                        .is-training.hidden
                            h2 Und wann?
                            p.text-warning
                                span.glyphicon.glyphicon-time
                                | von {{content.timeFromTo}} Uhr.

                        .no-training.hidden
                            h2 Leider ist heute kein Training
                            p.h2 Das nächste Training ist am {{content.nextDay | date: "EEEE (d.M.yyyy)"}} ab {{content.nextDay | date: "HH:mm"}} Uhr.
                        .is-tournament.hidden
                            h2 Nope, heute ist Turnier!
                            p.h2 Das nächste Training ist aber am {{content.nextDay | date: "EEEE"}} ab {{content.nextDay | date: "HH:mm"}} Uhr.
